<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_blue"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/detcov"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DetCov-19"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="#FFF"
                    android:textSize="24dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_blue"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kamu merasa sakit?"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="24dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#FFF"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jika Anda merasa sakit, silakan deteksi dini \ngejala covid-19 pada aplikasi ini atau hubungi \nCOVID-19 hotline 119."
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14dp"
                    android:textColor="#FFF"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_blue_radiuus"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_callnow"
                    android:layout_width="155dp"
                    android:layout_height="50dp"
                    android:text="Call Now"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="15dp"
                    android:textColor="#FFF"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_button1"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>

                <Button
                    android:id="@+id/btn_diagnosa"
                    android:layout_width="155dp"
                    android:layout_height="50dp"
                    android:text="Diagnosa"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="15dp"
                    android:textColor="#FFF"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_button2"
                    android:drawableLeft="@drawable/ic_search_black_24dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/menu_covid"
                        android:layout_width="71dp"
                        android:layout_height="74dp"
                        android:padding="17dp"
                        android:src="@drawable/covid"
                        android:background="@drawable/bg_white"
                        android:elevation="5dp"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Covid-19"
                        android:textSize="13dp"
                        android:textColor="#818183"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:gravity="center">
                    <ImageView
                        android:id="@+id/menu_pencegahan"
                        android:layout_width="71dp"
                        android:layout_height="74dp"
                        android:padding="20dp"
                        android:src="@drawable/ic_pan_tool_black_24dp"
                        android:background="@drawable/bg_white"
                        android:elevation="5dp"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Pencegahan"
                        android:textSize="13dp"
                        android:textColor="#818183"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/menu_penularan"
                        android:layout_width="71dp"
                        android:layout_height="74dp"
                        android:padding="20dp"
                        android:src="@drawable/ic_warning_black_24dp"
                        android:background="@drawable/bg_white"
                        android:elevation="5dp"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Penularan"
                        android:textSize="13dp"
                        android:textColor="#818183"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/menu_odppdp"
                        android:layout_width="71dp"
                        android:layout_height="74dp"
                        android:padding="20dp"
                        android:src="@drawable/ic_person_black_24dp"
                        android:background="@drawable/bg_white"
                        android:elevation="5dp"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Orang Terindikasi"
                        android:textAlignment="center"
                        android:textSize="13dp"
                        android:textColor="#818183"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_testcovid"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_blue_linear">
                <ImageView
                    android:layout_width="111dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/rapidtest" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lakukan Test Covid!"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="18dp"
                        android:textColor="#FFF"/>
                    <TextView
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pelajari tentang \nTest Covid-19 disini!"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14dp"
                        android:textColor="#FFF"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gray_berita"
                android:layout_marginTop="20dp"
                android:elevation="4dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berita Resmi Gugus Tugas"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#656567"
                    android:textSize="20dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Berita"
                            android:layout_marginLeft="24dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="#473F97"
                            android:textSize="15dp"/>
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Satgas Penanganan Covid-19 Sebut Zona Risiko Tinggi di 33 KabupatenKota Menurun"
                            android:layout_marginLeft="24dp"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="#656567"
                            android:textSize="15dp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="122dp"
                        android:layout_marginLeft="24dp"
                        android:src="@drawable/berita1"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/line"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Berita"
                            android:layout_marginLeft="24dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="#473F97"
                            android:textSize="15dp"/>
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Penemuan Obat COVID-19, Ali Gufron: Membutuhkan Proses Panjang Penemuan..."
                            android:layout_marginLeft="24dp"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="#656567"
                            android:textSize="15dp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="122dp"
                        android:layout_marginLeft="24dp"
                        android:src="@drawable/berita2"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>